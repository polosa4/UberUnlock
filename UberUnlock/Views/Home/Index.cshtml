@model IEnumerable<UberUnlock.Product>

@{
    ViewBag.Title = "Main Page";
}
<div class="container">
<div class="row">
@foreach (var item in Model)
{

    <div class="col-md-3" style="height: 300px; height: 300px; text-align: center">
        @if (item.ProductImageMappings != null && item.ProductImageMappings.Any())
        {
            <a href="@Url.Action("Details", "Products", new {id = item.ID})">
                <img src="@(Url.Content(Constants.ProductImagePath) + item.ProductImageMappings.OrderBy(pim => pim.ImageNumber).ElementAt(0).ProductImage.FileName)" style="width:150px;height:150px;">
            </a>
        }

        <a href="@Url.Action("Details", "Products", new {id = item.ID})">
            <p style="width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                @Html.DisplayFor(modelItem => item.Name)
            </p>
        </a>
        <a href="@Url.Action("Details", "Products", new {id = item.ID})">
            <p>$@Html.DisplayFor(modelItem => item.Price)</p>
            <input class="btn btn-success" type="submit" value="Order">
</a>
</div>
}
  </div>   
  </div>
